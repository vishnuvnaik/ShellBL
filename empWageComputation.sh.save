isAbsent=3
getemphrs() {
    empCheck=$(( RANDOM%3 ))
    case $empCheck in
         $isFullTime ) #fulltime employee
           workingHoursperday=8
	   ;;
         $isPartTime )  #parttime check
  	   workingHoursperday=4
	   ;;
          $isAbsent )
	   workingHoursperday=0 #absent employees
	   ;;
    esac
        echo "$workingHoursperday"
}
while (( $workingdays < $totalworkingDays && $workingHours < $totalWorkingHours ))
do
	((workingdays++))
	workingHours=$(($workingHoursperday+$workingHours)) #compuation and printing
        totalwageperday=$(( $workingHoursperday*$wagesperhour ))
        totalwages=$(( $totalwageperday+$totalwages))
 #printing of final result
done
echo "total wage = $totalwages"
